+alias org.eolang.hamcrest.assert-that
+home https://github.com/objectionary/eo-hamcrest
+junit
+package org.eolang.hamcrest
+version 0.0.0

[] > gen-by-regex-alphabetical-test
  assert-that > @
    "abc"
    $.gen-by-regex
      "/([a-z])/"

[] > gen-by-regex-dollar-test
  assert-that > @
    "$12"
    $.gen-by-regex
      "/($[0-9]*)/"

[] > gen-by-regex-multiline-test
  assert-that > @
    "1 bottle of water on the wall. \\n1 bottle of water."
    $.gen-by-regex
      "/(^([0-9]+).*)/m"

[] > gen-by-regex-dotall-test
  assert-that > @
    "too \\n many \\n line \\n Feed\\n"
    $.gen-by-regex
      "/(.*)/s"

[] > gen-by-regex-comments-test
  assert-that > @
    "4"
    $.gen-by-regex
      "/(\\d) #ignore this comment/x"

[] > gen-by-regex-unicode-test
  assert-that > @
    "Yıldırım"
    $.gen-by-regex
      "/(yildirim)/ui"
